/var/log/apps/*.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    create 0640 root adm
    sharedscripts
    postrotate
        systemctl reload rsyslog > /dev/null 2>&1 || true
    endscript
}

/var/log/apps/errors.log {
    daily
    rotate 60
    size 100M
    compress
    missingok
    notifempty
    create 0640 root adm
}
